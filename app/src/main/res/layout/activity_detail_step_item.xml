<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/recipe_step_height"
    android:layout_marginStart="@dimen/main_recipe_clock_margin_right"
    android:layout_marginEnd="@dimen/main_recipe_clock_margin_right"
    android:padding="@dimen/main_recipe_clock_margin_right">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/recipe_step_height"
        android:background="@drawable/step_button_anim"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/detail_step_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/card_corner_radius"
            android:fontFamily="@font/charmonman_regular"
            android:textSize="@dimen/text_size_two"
            android:textStyle="bold"
            tools:ignore="RelativeOverlap"
            tools:targetApi="jelly_bean"
            tools:text="@string/step_id" />

        <TextView
            android:id="@+id/detail_step_sh_descr"
            android:layout_width="wrap_content "
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/card_corner_radius"
            android:textSize="@dimen/text_size_one"
            android:textStyle="normal"
            tools:targetApi="jelly_bean"
            tools:text="@string/step_name" />
    </LinearLayout>
</android.support.v7.widget.CardView>