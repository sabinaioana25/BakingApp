<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Activity.VideoInstructionsActivity">

        <TextView
            android:id="@+id/detail_activity_step_short_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Recipe Intro" />

        <ImageView
            android:id="@+id/detail_activity_step_thumbnail"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/yellow_cake_recipe"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/detail_activity_step_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:scaleX="@android:integer/config_shortAnimTime"
                android:src="@drawable/video_background" />

            <ImageButton
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/play_button" />
        </RelativeLayout>

        <TextView
            android:id="@+id/detail_activity_step_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="@string/lorem_ipsum" />

        <Button
            android:id="@+id/detail_activity_step_button_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="@string/next_step" />
    </LinearLayout>
</ScrollView>