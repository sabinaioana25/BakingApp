<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/container_detail_step"
        android:name="com.example.android.bakingapp.Fragments.FragmentDetailStep"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:layout_weight="4"
        android:orientation="horizontal">

        <Button
            android:id="@+id/detail_activity_step_button_previous"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/detail_button_margin"
            android:layout_weight="1"
            android:background="@color/colorPrimaryThree"
            android:text="@string/previous_step"
            android:textColor="@color/cardview_light_background"
            tools:ignore="NestedWeights" />

        <Button
            android:id="@+id/detail_activity_step_button_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/detail_button_margin"
            android:layout_weight="1"
            android:background="@color/colorPrimaryThree"
            android:text="@string/next_step"
            android:textColor="@color/cardview_light_background" />
    </LinearLayout>
</LinearLayout>